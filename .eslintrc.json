{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "no-console": "off",
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true}],
        "linebreak-style": "off"
    }
}
